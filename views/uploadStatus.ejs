<html>
  <head>
    <title>Upload Status</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
      }

      .container {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      h1 {
        margin-top: 0;
      }

      .success {
        color: #4caf50;
      }

      .error {
        color: #f44336;
      }

      .button-container {
        margin-top: 20px;
      }

      .button-container a {
        display: inline-block;
        margin-right: 10px;
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 3px;
        text-decoration: none;
        cursor: pointer;
        font-size: 16px;
      }

      .button-container a:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Upload Status</h1>
      <% if (success) { %>
      <p class="success">File uploaded and saved successfully!</p>
      <% } else { %>
      <p class="error">No file selected!</p>
      <% } %>
      <div class="button-container">
        <a href="/">Go Back to Home</a>
      </div>
    </div>
  </body>
</html>
