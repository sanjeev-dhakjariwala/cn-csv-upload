<html>
  <head>
    <title>CSV Upload</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
      }

      h1 {
        text-align: center;
        margin-top: 50px;
      }

      form {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      label {
        font-size: 16px;
        display: block;
        margin-bottom: 10px;
      }

      input[type='file'] {
        border: 1px solid #ddd;
        padding: 10px;
        width: 100%;
        border-radius: 3px;
      }

      button[type='submit'] {
        background-color: #4caf50;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
      }

      button[type='submit']:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <h1>Upload CSV File</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <label for="csvFile">Choose a CSV file:</label>
      <input type="file" name="csvFile" id="csvFile" accept=".csv" required />
      <button type="submit">Upload</button>
    </form>
    <% if (uploadedCSVFiles?.length > 0) { %>
    <h2>Uploaded CSV Files:</h2>
    <ul>
      <% uploadedCSVFiles.forEach(function(file) { %>
      <li><a href="/csv/details?filename=<%= file %>"><%= file %></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <h2>No CSV files uploaded yet.</h2>
    <% } %>
  </body>
</html>
